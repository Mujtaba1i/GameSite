<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Welcome <%= user.username %>!</h1>
    <img src=<%= user.image %>> <br><br>
    <a href="/profile/new">Add a new game to your profile</a><br><br>
    <% games.forEach(game => {%>
        <li>
            <% if (game.image !== ""){%>
                <img src="<%= game.image %>">
            <%} %>
            <a href="/profile/<%= game._id %>"><%= game.name %></a>
        </li>
    <%}); %>
</body>
</html>